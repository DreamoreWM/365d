<script>
    // ==================== THEME MANAGEMENT ====================
    function applyTheme() {
        const theme = localStorage.getItem('theme') || 'light';
        if (theme === 'dark') {
            document.body.classList.add('dark-mode');
        } else {
            document.body.classList.remove('dark-mode');
        }
    }

    function toggleTheme() {
        const isDark = document.body.classList.toggle('dark-mode');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
    }

    // Apply theme on load
    applyTheme();

    // Theme toggle buttons
    document.getElementById('theme-toggle-desktop')?.addEventListener('click', (e) => {
        e.preventDefault();
        toggleTheme();
    });

    document.getElementById('theme-toggle-mobile')?.addEventListener('click', (e) => {
        e.preventDefault();
        toggleTheme();
    });

    // ==================== MOBILE DRAWER ====================
    const drawer = document.getElementById('drawer');
    const drawerOverlay = document.getElementById('drawer-overlay');
    const menuButton = document.getElementById('menu-button');

    function openDrawer() {
        drawer.classList.add('open');
        drawerOverlay.classList.add('open');
        document.body.style.overflow = 'hidden';
    }

    function closeDrawer() {
        drawer.classList.remove('open');
        drawerOverlay.classList.remove('open');
        document.body.style.overflow = '';
    }

    menuButton?.addEventListener('click', openDrawer);
    drawerOverlay?.addEventListener('click', closeDrawer);

    // Close drawer when clicking a link
    document.querySelectorAll('.drawer .menu-item').forEach(item => {
        item.addEventListener('click', () => {
            closeDrawer();
        });
    });

    // Close drawer on escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            closeDrawer();
        }
    });

    // ==================== ADMIN SUBMENU TOGGLE ====================
    function setupSubmenu(menuId, submenuId) {
        const adminMenu = document.getElementById(menuId);
        const adminSubmenu = document.getElementById(submenuId);
        const arrow = adminMenu?.querySelector('.menu-item-arrow');

        // Auto-open if on admin page
        if (adminMenu?.classList.contains('active')) {
            adminSubmenu?.classList.add('open');
            arrow?.classList.add('open');
        }

        adminMenu?.addEventListener('click', (e) => {
            e.preventDefault();
            const isOpen = adminSubmenu?.classList.toggle('open');
            arrow?.classList.toggle('open');
        });
    }

    // Setup for desktop and mobile
    setupSubmenu('admin-menu-desktop', 'admin-submenu-desktop');
    setupSubmenu('admin-menu-mobile', 'admin-submenu-mobile');
</script>

