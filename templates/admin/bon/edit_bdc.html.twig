{% extends '@EasyAdmin/crud/edit.html.twig' %}

{% block main %}

    {{ parent() }}

    <hr>

    <h3 class="mt-4">Prestations li√©es</h3>

    <div class="row">
        {% for prestation in entity.instance.prestations %}
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">

                        <h5 class="card-title">
                            {{ prestation.typePrestation ? prestation.typePrestation.nom : 'Prestation' }}
                        </h5>

                        <p class="text-muted mb-1">
                            <strong>Date :</strong> {{ prestation.datePrestation|date('d/m/Y') }}
                        </p>

                        <p class="mb-1">
                            <strong>Description :</strong><br>
                            {{ prestation.description }}
                        </p>

                        <p>
                            <span class="badge 
                                {% if prestation.statut == 'termin√©' %} bg-success
                                {% elseif prestation.statut == 'en cours' %} bg-primary
                                {% elseif prestation.statut == 'programm√©' %} bg-info
                                {% elseif prestation.statut == 'non effectu√©' %} bg-danger
                                {% else %} bg-warning {% endif %}">
                                {{ prestation.statut }}
                            </span>
                        </p>

                        <!-- üìÑ Bouton PDF -->
                        <a href="{{ path('prestation_pdf', { id: prestation.id }) }}" 
                           class="btn btn-sm btn-outline-secondary" target="_blank">
                            üìÑ T√©l√©charger PDF
                        </a>

                        <!-- üîç Bouton d√©tails -->
                        <button 
                            class="btn btn-sm btn-outline-primary"
                            data-bs-toggle="modal"
                            data-bs-target="#prestationDetailModal"
                            data-prestation-id="{{ prestation.id }}"
                            data-prestation-index="{{ loop.index0 }}"
                            data-prestations-total="{{ entity.instance.prestations|length }}">
                            üîç D√©tails & PDF
                        </button>

                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-muted">Aucune prestation pour le moment.</p>
        {% endfor %}
    </div>

    <div class="text-center mt-4">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPrestationModal">
            ‚ûï Ajouter une prestation
        </button>
    </div>

    <!-- Modale Bootstrap -->
    <div class="modal fade" id="addPrestationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Ajouter une prestation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body" id="modal-prestation-content">
                    <div class="text-center p-4">
                        <div class="spinner-border"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal D√©tails Prestation -->
    <div class="modal fade" id="prestationDetailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content ea-content">

                <div class="modal-header bg-light border-bottom">
                    <h5 class="modal-title fw-bold">
                        üîß D√©tails de la prestation
                    </h5>

                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary btn-sm" id="prev-prestation">‚Üê Pr√©c√©dent</button>
                        <button class="btn btn-outline-secondary btn-sm" id="next-prestation">Suivant ‚Üí</button>
                        <button type="button" class="btn-close ms-2" data-bs-dismiss="modal"></button>
                    </div>
                </div>

                <div class="modal-body p-4" id="prestation-detail-content" style="max-height: 75vh; overflow-y: auto;">
                    <div class="text-center p-5">
                        <div class="spinner-border"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>



{% endblock %}


{% block body_javascript %}
    {{ parent() }}

    <script>
        document.addEventListener("DOMContentLoaded", function() {

            const modal = document.getElementById('addPrestationModal');

            modal.addEventListener('show.bs.modal', function () {
                fetch('{{ path('ea_prestation_modal_new', { bon: entity.instance.id }) }}')
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('modal-prestation-content').innerHTML = html;
                    });
            });

        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            const modal = document.getElementById('prestationDetailModal');
            const content = document.getElementById('prestation-detail-content');

            let currentIndex = 0;
            let prestations = [];

            const prevBtn = document.getElementById('prev-prestation');
            const nextBtn = document.getElementById('next-prestation');

            function loadPrestation(prestationId) {
                content.innerHTML =
                    '<div class="text-center p-5"><div class="spinner-border"></div></div>';

                fetch('/admin/prestation/detail/' + prestationId)
                    .then(response => response.text())
                    .then(html => {
                        content.innerHTML = html;
                    });
            }

            modal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;

                const prestationId = button.getAttribute('data-prestation-id');
                currentIndex = parseInt(button.getAttribute('data-prestation-index'));
                const total = parseInt(button.getAttribute('data-prestations-total'));

                prestations = Array.from(
                    document.querySelectorAll('[data-prestation-id]')
                ).map(btn => btn.getAttribute('data-prestation-id'));

                updateNavButtons(total);

                loadPrestation(prestationId);
            });

            function updateNavButtons(total) {
                prevBtn.disabled = currentIndex <= 0;
                nextBtn.disabled = currentIndex >= total - 1;
            }

            prevBtn.addEventListener('click', function () {
                if (currentIndex > 0) {
                    currentIndex--;
                    updateNavButtons(prestations.length);
                    loadPrestation(prestations[currentIndex]);
                }
            });

            nextBtn.addEventListener('click', function () {
                if (currentIndex < prestations.length - 1) {
                    currentIndex++;
                    updateNavButtons(prestations.length);
                    loadPrestation(prestations[currentIndex]);
                }
            });

        });
    </script>



{% endblock %}
