        const progress = bon.nombrePrestationsNecessaires > 0
            ? (bon.nombrePrestations / bon.nombrePrestationsNecessaires * 100).toFixed(0)
            : 0;

        const geoHtml = bon.groupeGeo
            ? '<span class="geo-badge" style="background: ' + bon.groupeGeo.couleur + ';"><i class="material-icons" style="font-size: 12px;">place</i> ' + bon.groupeGeo.nom + '</span>'
