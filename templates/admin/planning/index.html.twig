let searchTimeout;

async function searchBons() {
    clearTimeout(searchTimeout);

    const query = document.getElementById('bonSearchInput').value.trim();
    const statut = document.getElementById('filterStatut').value;
    const groupeGeo = document.getElementById('filterGroupe').value;
    const sort = document.getElementById('filterSort').value;
    const resultsContainer = document.getElementById('bonSearchResults');

    resultsContainer.innerHTML = '<div class="loading-spinner"><div class="spinner"></div><p style="margin-top: 16px;">Recherche...</p></div>';

    searchTimeout = setTimeout(async () => {
        try {
            const params = new URLSearchParams({ q: query, statut: statut, groupe_geo: groupeGeo, sort: sort });
            const response = await fetch('/admin/planning/search-bons?' + params);
            const bons = await response.json();
            displaySearchResults(bons);
        } catch (error) {
            console.error('Erreur recherche:', error);
            resultsContainer.innerHTML = '<div class="empty-state" style="padding: 40px; color: #d32f2f;"><i class="material-icons" style="font-size: 64px;">error</i><p>Erreur</p></div>';
        }
    }, 300);
