// ==================== EVENT POPOVER ====================
function showEventPopover(event, targetEl) {
    // Remove existing popovers
    document.querySelectorAll('.event-popover').forEach(el => el.remove());

    const props = event.extendedProps;
    const popover = document.createElement('div');
    popover.className = 'event-popover';

    let bodyHtml = '<div class="popover-row">' +
        '<i class="material-icons">person</i>' +
        '<span>' + props.employeNom + '</span>' +
    '</div>' +
    '<div class="popover-row">' +
        '<i class="material-icons">schedule</i>' +
        '<span>' + new Date(event.start).toLocaleTimeString('fr-FR', {hour:'2-digit', minute:'2-digit'}) + '</span>' +
    '</div>';

    if (props.clientAdresse) {
        bodyHtml += '<div class="popover-row">' +
            '<i class="material-icons">location_on</i>' +
            '<span>' + props.clientAdresse + '</span>' +
        '</div>';
    }

    if (props.typePrestation) {
        bodyHtml += '<div class="popover-row">' +
            '<i class="material-icons">category</i>' +
            '<span>' + props.typePrestation + '</span>' +
        '</div>';
    }

    if (props.statutLabel) {
        bodyHtml += '<div class="popover-row">' +
            '<i class="material-icons">' + (props.statutIcon || 'info') + '</i>' +
            '<span>' + props.statutLabel + '</span>' +
        '</div>';
    }

    if (props.numeroCommande) {
        bodyHtml += '<div class="popover-row">' +
            '<i class="material-icons">receipt</i>' +
            '<span>BC ' + props.numeroCommande + '</span>' +
        '</div>';
    }

    popover.innerHTML = '<div class="popover-header" style="background: ' + event.backgroundColor + ';">' +
        '<strong>' + event.title + '</strong>' +
        '<button onclick="this.closest(\'.event-popover\').remove()" class="popover-close">' +
            '<i class="material-icons">close</i>' +
        '</button>' +
    '</div>' +
    '<div class="popover-body">' +
        bodyHtml +
        '<div class="popover-actions">' +
            '<a href="/adm/prestation/' + props.prestationId + '" ' +
               'class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" ' +
               'style="font-size: 0.75rem; height: 32px;">' +
                '<i class="material-icons" style="font-size: 16px; vertical-align: middle; margin-right: 4px;">visibility</i> Voir' +
            '</a>' +
        '</div>' +
    '</div>';

    document.body.appendChild(popover);

    // Position near the clicked element
    const rect = targetEl.getBoundingClientRect();
    const popoverWidth = 300;
    let left = rect.left + window.scrollX;
    let top = rect.bottom + window.scrollY + 8;

    // Keep within viewport
    if (left + popoverWidth > window.innerWidth) {
        left = window.innerWidth - popoverWidth - 16;
    }
    if (top + 300 > window.innerHeight + window.scrollY) {
        top = rect.top + window.scrollY - 300 - 8;
    }

    popover.style.top = top + 'px';
    popover.style.left = left + 'px';

    // Close on click outside
    setTimeout(() => {
        document.addEventListener('click', function closePopover(e) {
            if (!popover.contains(e.target) && !targetEl.contains(e.target)) {
                popover.remove();
                document.removeEventListener('click', closePopover);
            }
        });
    }, 100);
}

// ==================== PREVIEW EVENT ====================
function addPreviewEvent(start, end) {
    removePreviewEvent();

    // Default to 1 hour if no end or same as start
    if (!end || end.getTime() === start.getTime()) {
        end = new Date(start.getTime() + 60 * 60 * 1000);
    }

    // Get selected employee name
    const employeSelect = document.getElementById('create_employe');
    const employeName = employeSelect && employeSelect.value
        ? employeSelect.options[employeSelect.selectedIndex].text.trim()
        : '';

    const title = employeName ? 'Nouveau - ' + employeName : 'Nouveau cr\u00e9neau';

    previewEvent = calendar.addEvent({
        id: 'preview',
        title: title,
        start: start,
        end: end,
        display: 'auto',
        backgroundColor: 'transparent',
        borderColor: 'transparent',
        textColor: 'var(--primary)',
        editable: false,
    });
}

function removePreviewEvent() {
    if (previewEvent) {
        previewEvent.remove();
        previewEvent = null;
    }
    // Also try by ID in case reference is stale
    if (calendar) {
        const existing = calendar.getEventById('preview');
        if (existing) existing.remove();
    }
}

function updatePreviewEmploye() {
    if (!previewEvent || !calendar) return;
    const existing = calendar.getEventById('preview');
    if (!existing) return;

    const employeSelect = document.getElementById('create_employe');
    const employeName = employeSelect && employeSelect.value
        ? employeSelect.options[employeSelect.selectedIndex].text.trim()
        : '';

    existing.setProp('title', employeName ? 'Nouveau - ' + employeName : 'Nouveau cr\u00e9neau');
}

