// ==================== GLOBALS ====================
let calendar;
let employeeData = [];
let selectedEmployees = new Set();
let currentView = 'calendar';
let previewEvent = null;

// ==================== INITIALIZATION ====================
document.addEventListener('DOMContentLoaded', async function() {
    // Auto-upgrade MDL
    document.querySelectorAll('.mdl-textfield').forEach(field => {
        const input = field.querySelector('input, select');
        if (input && input.value) {
            field.classList.add('is-dirty');
        }
    });

    // Load employees for calendar
    try {
        const empResponse = await fetch('/admin/planning/employes');
        employeeData = await empResponse.json();
        employeeData.forEach(e => selectedEmployees.add(e.id));
        renderEmployeePanel();
    } catch (error) {
        console.error('Erreur chargement employes:', error);
    }

    // Initialize FullCalendar
    initCalendar();

    // Restore saved view (force calendar if bonId is in URL)
    const urlBonId = new URLSearchParams(window.location.search).get('bonId');
    const savedView = urlBonId ? 'calendar' : (localStorage.getItem('planningView') || 'calendar');
    switchView(savedView);

    // Auto-load bon if bonId is in URL
    if (urlBonId) {
        await autoLoadBon(urlBonId);
    }

    // Update preview when employee selection changes
    const createEmployeSelect = document.getElementById('create_employe');
    if (createEmployeSelect) {
        createEmployeSelect.addEventListener('change', updatePreviewEmploye);
    }

    // Remove preview on form submit
    const calendarForm = document.querySelector('#calendarCreateForm form');
    if (calendarForm) {
        calendarForm.addEventListener('submit', removePreviewEvent);
    }

    // Load timeline stats
    loadStats();
});

// ==================== FULLCALENDAR ====================
function initCalendar() {
    const calendarEl = document.getElementById('fullcalendar');
    if (!calendarEl) return;

    calendar = new FullCalendar.Calendar(calendarEl, {
