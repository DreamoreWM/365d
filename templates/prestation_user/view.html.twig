<script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>

<script>
const canvas = document.getElementById('signature-pad');
let signaturePad;

// Sauvegarde la signature originale
let signatureData = null;

function resizeCanvas() {
    const ratio = Math.max(window.devicePixelRatio || 1, 1);

    // Taille avant resize (pour recalcul)
    const oldWidth = canvas.width / ratio;
    const oldHeight = canvas.height / ratio;

    // Compute new size
    const newWidth = canvas.offsetWidth;
    const newHeight = 200;

    // RÃ©cupÃ¨re donnÃ©es avant resize
    if (signaturePad && !signaturePad.isEmpty()) {
        signatureData = signaturePad.toData();
    }

    // Appliquer la nouvelle taille
    canvas.width = newWidth * ratio;
    canvas.height = newHeight * ratio;
    canvas.getContext("2d").scale(ratio, ratio);

    // RecrÃ©er le pad vide
    if (signaturePad) {
        signaturePad.off();
    }

    signaturePad = new SignaturePad(canvas, {
        backgroundColor: 'white',
        penColor: 'black',
    });

    // Restaurer la signature avec correction du ratio
    if (signatureData) {
        const scaleX = newWidth / oldWidth;
        const scaleY = newHeight / oldHeight;

        const scaled = signatureData.map(stroke => ({
            ...stroke,
            points: stroke.points.map(p => ({
                x: p.x * scaleX,
                y: p.y * scaleY
            }))
        }));

        signaturePad.fromData(scaled);
    }
}

// Initialisation
function initSignature() {
    signaturePad = new SignaturePad(canvas, {
        backgroundColor: 'white',
        penColor: 'black',
    });

    resizeCanvas();
}

initSignature();

// Responsive & rotation
window.addEventListener("resize", () => {
    resizeCanvas();
});

// Effacer
document.getElementById('clear').addEventListener('click', () => {
    signaturePad.clear();
    signatureData = null;
});

// Envoi du formulaire
document.querySelector('form').addEventListener('submit', () => {
    const input = document.getElementById("signature-input");

    if (!signaturePad.isEmpty()) {
        input.value = signaturePad.toDataURL();
    } else {
        // garder signature existante
        input.value = input.value || "{{ prestation.signature }}";
    }
});


</script>

