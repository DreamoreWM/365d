<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 14px;
            color: #000;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
            font-size: 26px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .header-left img {
            height: 60px;
        }

        .header-right {
            text-align: right;
            font-size: 13px;
            line-height: 18px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 18px;
        }

        td {
            border: 1px solid #000;
            padding: 8px;
            vertical-align: top;
        }

        .icon-row {
            width: 100%;
            text-align: center;
            margin: 15px 0;
        }

        .icon-row img {
            height: 70px;
            margin: 0 6px;
            opacity: 0.9;
        }

        .signature {
            text-align: center;
            margin-top: 20px;
        }

        .signature img {
            height: 90px;
        }
    </style>
</head>

<body>

    <!-- HEADER avec logo -->
    <div class="header">
        <div class="header-left">
            {% if logo_base64 %}
                <img src="{{ logo_base64 }}" alt="Logo ENI" style="max-width: 150px;">
            {% endif %}
        </div>
        <div class="header-right">
            <strong>PA DES VOILES</strong><br>
            99 VOIE DES TRAMS<br>
            59118 WAMBRECHIES
        </div>
</div>

    <h1>FICHE INTERVENTION</h1>

    <!-- ADRESSE DES TRAVAUX -->
    <table>
        <tr>
            <td>
                <strong>ADRESSE DES TRAVAUX :</strong><br>
                <br>
                {{ prestation.bonDeCommande.clientAdresse }}<br>
                {{ prestation.bonDeCommande.clientComplementAdresse }}
            </td>
        </tr>
    </table>

    <!-- DATE / NUMERO / HEURE -->
    <table>
        <tr>
            <td><strong>DATE DE L'INTERVENTION</strong><br>{{ prestation.datePrestation|date('d/m/Y') }}</td>
            <td><strong>NUMÃ‰RO DE BON DE COMMANDE</strong><br>{{ prestation.bonDeCommande.numeroCommande }}</td>
            <td><strong>HEURE DE L'INTERVENTION</strong><br>{{ prestation.datePrestation|date('H:i') }}</td>
        </tr>
    </table>

    <!-- DESCRIPTIF -->
    <table>
        <tr>
            <td>
                <strong>INTERVENTION :</strong> : {{ prestation.bonDeCommande.typePrestation ?? prestation.typePrestation}}
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td style="height: 390px;">
                {{ prestation.compteRendu|raw }}
            </td>
        </tr>
    </table>



    <!-- SIGNATURES -->
    <table style="width:100%; border-collapse:collapse;">
        <tr>
            <td style="border:1px solid #000; padding:8px; width:50%; height:150px; vertical-align:top;">
                <strong>NOM ET SIGNATURE DU LOCATAIRE</strong><br>
                {{ prestation.bonDeCommande.clientNom }}<br><br>

                {% if prestation.signature %}
                    <img src="{{ prestation.signature }}" alt="Signature client" style="max-width:100%; max-height:100px;">
                {% endif %}
            </td>

            <td style="border:1px solid #000; padding:8px; width:50%; height:150px; vertical-align:top;">
                <strong>NOM ET SIGNATURE DU TECHNICIEN</strong><br>
                {{ app.user.nom ?? '' }}<br><br>

                {% if app.user.signature %}
                    <img src="{{ app.user.signature }}" alt="Signature technicien" style="max-width:100%; max-height:100px;">
                {% endif %}
            </td>
        </tr>
    </table>


 
</body>
</html>
